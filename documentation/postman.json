    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "// Set current year variable",
                    "pm.globals.set('current_year', new Date().getFullYear());"
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "// Check if response is successful",
                    "pm.test('Status code is 200', function () {",
                    "    pm.response.to.have.status(200);",
                    "});",
                    "",
                    "// Parse response and set tokens",
                    "if (pm.response.code === 200) {",
                    "    const responseJson = pm.response.json();",
                    "    ",
                    "    // Set token for user login",
                    "    if (responseJson.data && responseJson.data.token) {",
                    "        if (pm.info.requestName === 'User Login') {",
                    "            pm.globals.set('token', responseJson.data.token);",
                    "        } else if (pm.info.requestName === 'Admin Login') {",
                    "            pm.globals.set('admin_token', responseJson.data.token);",
                    "        }",
                    "    }",
                    "}"
                ]
            }
        }
